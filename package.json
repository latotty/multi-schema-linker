{
  "name": "multi-schema-linker",
  "version": "0.0.2",
  "description": "This tool allows you to write your schemas in multiple files, and link them via references. Compatible with JSON and YAML.",
  "main": "lib/index.js",
  "bin" : {
    "multi-schema-linker" : "./bin/multi-schema-linker"
  },
  "scripts": {
    "start": "bin/multi-schema-linker",
    "lint": "eslint 'lib/**'",
    "test": "mocha --full-trace --require co-mocha 'test'"
  },
  "keywords": [
    "swagger",
    "yaml",
    "json",
    "schema",
    "tool",
    "references"
  ],
  "repository": {
    "type" : "git",
    "url" : "https://github.com/latotty/multi-schema-linker"
  },
  "engines" : { "node" : ">=4.0.0" },
  "bugs": { "url" : "https://github.com/latotty/multi-schema-linker/issues" },
  "author": "LaTotty <latotty@codingsans.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "^2.9.0",
    "debug": "^2.2.0",
    "es6-promise": "^3.1.2",
    "js-yaml": "^3.5.5",
    "json-pointer": "^0.5.0",
    "lodash": "^4.8.2"
  },
  "devDependencies": {
    "co-mocha": "^1.1.2",
    "eslint": "^1.10.3",
    "eslint-config-codingsans": "^1.2.0",
    "mocha": "^2.4.5"
  }
}
